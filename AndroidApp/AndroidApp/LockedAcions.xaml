<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidApp.LockedAcions"
             Title="Locked actions">
    <ScrollView>
        <StackLayout Orientation="Vertical">
            <Button x:Name="btnStopFiltering" Text="Stop filtering" Clicked="BtnStopFiltering_Clicked"/>
            <Button x:Name="btnSetMasterPass" Text="Set unlock password" 
                    Clicked="BtnSetMasterPass_Clicked"/>
            <Button x:Name="btnLock" Text="Lock To Date" Clicked="BtnLock_Clicked" />


            <Button x:Name="btnImportPolicies" Text="Import 3 Policies" Clicked="BtnImportPolicies_Clicked" />
            <Label Text="URL, Time and Wifis" 
                   HorizontalOptions="Center" />

            <Button x:Name="btnDebugUnlock" Text="!!!DEBUG!!! Unlock" 
                    Clicked="BtnDebugUnlock_Clicked" BackgroundColor="LightSalmon"/>
        </StackLayout>
    </ScrollView>
</ContentPage>