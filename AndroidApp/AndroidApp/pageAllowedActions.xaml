<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidApp.pageAllowedActions"
             Title="Allowed Actions">
    <ScrollView>
        <StackLayout Orientation="Vertical">
            <Button x:Name="btnCheckLocked" Text="Is unlocked?" Clicked="BtnCheckLocked_Clicked" ></Button>
            <Button x:Name="btnScanWifi" Text="Start Wifi Scan" Clicked="BtnScanWifi_Clicked"></Button>

            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnStartService" Text="Serivce Start" Clicked="BtnStartService_Clicked"></Button>
                <Button x:Name="btnStopService" Text="Serivce Stop"  Clicked="BtnStopService_Clicked"></Button>
            </StackLayout>
            <Button x:Name="btnStartFiltering" Text="Start filtering" Clicked="BtnStartFiltering_Clicked"></Button>

            <Button x:Name="btnExportFiles" Text="Export Policies" Clicked="BtnExportFiles_Clicked" ></Button>
            <!-- Expose \ Import Files Wifi + Policies  (except pass file) -->
        </StackLayout>
    </ScrollView>
</ContentPage>