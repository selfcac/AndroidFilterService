<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidApp.pageAllowedActions"
             Title="Allowed Actions">
    <ScrollView>
        <StackLayout Orientation="Vertical">
            <Button Text="Is unlocked?" ></Button>

            <StackLayout Orientation="Horizontal">
                <Button Text="Serivce Start" WidthRequest="150" x:Name="btnStartService" Clicked="BtnStartService_Clicked"></Button>
                <Button Text="Restart" x:Name="btnRestartService" Clicked="BtnRestartService_Clicked"></Button>
            </StackLayout>
            <Button Text="Start filtering" ></Button>
            
            <Button Text="Export Policies" ></Button>
            <!-- Expose \ Import Files Wifi + Policies  (except pass file) -->
        </StackLayout>
    </ScrollView>
</ContentPage>