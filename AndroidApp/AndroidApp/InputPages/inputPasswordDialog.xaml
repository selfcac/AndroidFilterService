<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidApp.InputPages.inputPasswordDialog">
    <StackLayout>
        <Entry IsPassword="True"
               x:Name="txtPassword"/>
        <Button x:Name="btnTogglePass" Text="Show\Hide Password"
                Clicked="BtnTogglePass_Clicked"/>
        <Button x:Name="btnSetPass" Text="Save password!"
                Clicked="BtnSetPass_Clicked" />
    </StackLayout>
    
</ContentPage>