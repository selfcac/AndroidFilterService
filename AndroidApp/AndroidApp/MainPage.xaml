<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AndroidApp"
             x:Class="AndroidApp.MainPage" Title="selfCAC Main">

    <ScrollView>
        <StackLayout>
            <Button x:Name="btnOpenTest" Text="Test page" Clicked="BtnOpenTest_Clicked" 
                    BackgroundColor="Coral" TextColor="White" Margin="5"/>
            <Button x:Name="btnAllowedPage" Text="Allowed actions" Clicked="BtnAllowedPage_Clicked" 
                    BackgroundColor="LightGreen" TextColor="Black" Margin="5"/>
            <Button x:Name="btnUnlockPage" Text="Unlock Methods" Clicked="BtnUnlockPage_Clicked" 
                    BackgroundColor="LightYellow" TextColor="Black" Margin="5"/>
            <Button x:Name="btnLockedPage" Text="Locked actions" Clicked="BtnLockedPage_Clicked" 
                    BackgroundColor="IndianRed" TextColor="White" Margin="5"/>

            <Button x:Name="btnInfoPage" Text="V | System Info | V" Clicked="BtnInfoPage_Clicked" 
                     Margin="5"/>
            <Label x:Name="lblInfo" BackgroundColor="Yellow" TextColor="Black" />

            <Label Text="selfCAC @ github.com"></Label>
        </StackLayout>

    </ScrollView>

</ContentPage>
